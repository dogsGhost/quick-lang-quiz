{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {},
  "plugins": [
    "react"
  ],
  "extends": "eslint:recommended",
  "rules": {
    "arrow-spacing": [2, { "before": true, "after": true }],
    "block-scoped-var": 2,
    "default-case": 1,
    "dot-notation": 2,
    "eqeqeq": [2, "smart"],
    "indent": [2, 2],
    "max-len": [1, 100, 2],
    "no-eval": 2,
    "no-floating-decimal": 2,
    "no-loop-func": 2,
    "no-magic-numbers": 1,
    "no-new-wrappers": 2,
    "no-trailing-spaces": [2, { "skipBlankLines": false }],
    "no-unexpected-multiline": 2,
    "prefer-arrow-callback": 2,
    "quotes": [2, "single"],
    "radix": 2,
    "strict": [2, "never"],
    "vars-on-top": 1,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2
  }
}
